{
  "name": "@0xcurvy/curvy-sdk",
  "license": "MIT",
  "version": "0.0.6",
  "repository": "https://github.com/0xCurvy/curvy-sdk",
  "type": "module",
  "main": "dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "typings": "./dist/types/index.d.ts",
  "description": "A TypeScript/JavaScript SDK for interacting with the Curvy platform.",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup",
    "build:example": "tsup src/exports/index.ts --format esm --dts --dts-resolve --clean --out-dir example/curvy-os/dist --platform browser --target es2022",
    "clean": "rimraf dist .turbo",
    "check": "biome check --write src",
    "format": "biome format --write src",
    "lint": "biome lint --write src",
    "check:packages": "pnpm up --latest --interactive",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "prepare": "tsup"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/circomlibjs": "^0.1.6",
    "@types/lodash.merge": "^4.6.9",
    "@types/snarkjs": "^0.7.9",
    "rimraf": "^6.0.1",
    "tsup": "8.5.0",
    "typescript": "^5.9.3",
    "vitest": "3.1.4"
  },
  "dependencies": {
    "@lifi/sdk": "^3.13.6",
    "@noble/secp256k1": "^2.3.0",
    "buffer": "^6.0.3",
    "circomlibjs": "^0.1.7",
    "dayjs": "^1.11.13",
    "dnum": "^2.15.0",
    "emittery": "^1.2.0",
    "ethers": "^6.14.4",
    "lodash.merge": "^4.6.2",
    "poseidon-lite": "^0.2.1",
    "snarkjs": "^0.7.5",
    "starknet": "^7.6.4",
    "uuid": "^13.0.0",
    "viem": "^2.43.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "biome check --write ./src"
    ]
  }
}
